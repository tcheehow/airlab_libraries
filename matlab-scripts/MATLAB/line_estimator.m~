function [alpha, r] = line_estimator(points)

    %% Method 1

    xy_bar = mean(points);
    x_bar = xy_bar(1);
    y_bar = xy_bar(2);
    
    num = 0;
    den = 0;
    
    for i=1:length(points)
        x = points(i,1);
        y = points(i,2);
        num = num + (y_bar - y) * (x_bar - x);
        den = den + ((y_bar - y)^2 - (x_bar - x)^2);
    end
    
    tan2alpha = -2 * num / den;
    alpha = atan(tan2alpha);
    r = x_bar * cos(alpha) + y_bar * sin(alpha);
    
    %% Method 2
    
    
    
end